<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item >
                <shape>
                    <solid android:color="@color/button_common_color" />
                    <corners android:radius="3dp" />
                    <stroke android:width="0.6dp" android:color="@color/button_common_border_color" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/button_common_pressed_color" />
                    <corners android:radius="3dp" />
                    <stroke android:width="0.6dp" android:color="@color/button_common_border_color" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_common_color" />
            <corners android:radius="3dp" />
            <stroke android:width="0.6dp" android:color="@color/button_common_border_color" />
        </shape>
    </item>

    <item android:drawable="@drawable/selector_bg_button_common_unable" android:state_enabled="false" />
</selector>