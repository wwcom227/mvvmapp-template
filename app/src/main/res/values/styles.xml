<resources>

    <style name="btn_style_sure">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@android:color/holo_blue_dark</item>
    </style>

    <style name="LoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 设置背景色 透明-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置是否显示背景 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 设置背景透明度 -->
        <!--        <item name="android:backgroundDimAmount">0.6</item>-->
        <!-- 设置点击空白不消失 -->
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <!--region Button Style-->
    <style name="common_fancy_button">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="fb_borderColor">#00000000</item>
        <item name="fb_borderWidth">1dp</item>
        <item name="fb_defaultColor">@color/colorPrimary</item>
        <item name="fb_focusColor">@color/colorPrimary</item>
        <item name="fb_radius">50dp</item>
        <item name="fb_textColor">#FFFFFF</item>
        <item name="fb_textSize">18sp</item>
    </style>

    <style name="common_dialog_positive_fancy_button" parent="common_fancy_button"></style>

    <style name="common_dialog_negative_fancy_button" parent="common_fancy_button">
        <item name="fb_defaultColor">#00000000</item>
        <item name="fb_focusColor">#00000000</item>
        <item name="fb_textColor">#B0B0B0</item>
    </style>
    <!--endregion Button Style-->

    <!--region Dialog Style-->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert"></style>

    <style name="FullScreenDialogStyle" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="common_dialog_layout">
        <item name="android:background">@drawable/bg_dialog</item>
        <item name="android:paddingBottom">@dimen/dialog_layout_padding_bottom</item>
        <item name="android:paddingTop">@dimen/dialog_layout_padding_top</item>
    </style>

    <style name="common_dialog_title">
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/font_big_title</item>
    </style>

    <style name="common_dialog_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_size</item>
        <item name="android:background">#cdcdcd</item>
    </style>

    <style name="common_dialog_bottom">
        <item name="android:layout_marginLeft">@dimen/dialog_bottom_padding_left</item>
        <item name="android:layout_marginRight">@dimen/dialog_bottom_padding_right</item>
        <item name="android:layout_marginTop">@dimen/dialog_bottom_padding_top</item>
    </style>

    <style name="common_dialog_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/selector_bg_button_common</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_small_title</item>
    </style>

    <style name="common_dialog_button_negative">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/selector_bg_button_negative_common</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">@dimen/font_small_title</item>
    </style>

    <style name="dialog_pop_up" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/dialog_animation_pop_up</item>
        <item name="android:windowBackground">@null</item>
        <!--        <item name="android:windowFullscreen">true</item>-->
        <!-- 是否有边框 -->
        <!--        <item name="android:windowFrame">@null</item>-->
        <!--        <item name="android:windowIsTranslucent">true</item>&lt;!&ndash; 半透明 &ndash;&gt;-->
        <!--        <item name="android:backgroundDimEnabled">true</item>-->
        <!--        <item name="android:windowContentOverlay">@null</item>-->
        <!--        <item name="android:windowCloseOnTouchOutside">true</item>-->
        <!--        <item name="android:backgroundDimAmount">0.5</item>&lt;!&ndash; 背景模糊的透明度 数值越小越透明&ndash;&gt;-->
        <item name="android:windowIsFloating">false</item><!-- 浮现在Activity之上 -->
        <item name="windowNoTitle">true</item><!-- 无标题 -->
    </style>

    <style name="dialog_pop" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="dialog_animation_pop_up" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_array_pop_up_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_array_pop_up_exit</item>
    </style>
    <!--endregion Dialog Style-->

    <!--region Layout Style -->
    <style name="group_item_info_layout">
        <item name="android:paddingStart">35dp</item>
        <item name="android:paddingEnd">35dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="group_item_info_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="group_item_info_edit_value">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="group_item_info_value">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">#4D4D4D</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="group_item_info_arrow">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:src">@mipmap/ic_arrow_right</item>
    </style>

    <style name="group_info_divider_style">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#e5e5e5</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#6693a8c2</item>
        <item name="colorControlActivated">@color/purple_500</item>
        <item name="colorSwitchThumbNormal">#6693a8c2</item>
    </style>

    <!--endregion Layout Style -->

    <style name="common_toolbar_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:maxHeight">?attr/actionBarSize</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_big_title</item>
    </style>
</resources>
